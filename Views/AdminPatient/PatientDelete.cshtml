@model Asp.Net_MvcWeb_Pj3.Aptech.Models.Patient

@* ràng buộc thẻ input vào entity class *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Delete Patient</h2>

<form asp-action="PatientDeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Boold_Type"></label>
        <input asp-for="Boold_Type" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="GenDer"></label>
        <input asp-for="GenDer" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ImportDate"></label>
        <input asp-for="ImportDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ExportDate"></label>
        <input asp-for="ExportDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PublisherId"></label>
        <input asp-for="PublisherId" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

