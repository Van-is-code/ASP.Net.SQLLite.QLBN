@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Patient Edit";
}

@model Asp.Net_MvcWeb_Pj3.Aptech.Models.Patient

@* ràng buộc thẻ input vào entity class *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="ui container">
    <div class="ui segments">
        <div class="ui segment">
            <h5 class="ui header">
                <i class="icon plus"></i>Form Edit Patient
            </h5>
        </div>
        <form method="post" action="/admin/Patient/edit" class="ui form segment">

                <input type="hidden" name="Id" value="@Model.Id" />

                <p class="ui field">
                    <label>Name:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Name" value="@Model.Name" />
                </p>

                <p class="ui field">
                    <label>Year:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Year" value="@Model.Year" />
                </p>

                <p class="ui field">
                    <label>Height:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Height" value="@Model.Height" />
                </p>

                <p class="ui field">
                    <label>Boold_Type:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Boold_Type" value="@Model.Boold_Type" />
                </p>

                <p class="ui field">
                    <label>GenDer:<label style="color: red; font-size: 150% ;">*</label></label>
                    <label><input type="radio" name="GenDer" value="1" @(Model.GenDer == 1 ? "checked" : "") /> Nam</label>
                <label><input type="radio" name="GenDer" value="0" @(Model.GenDer == 0 ? "checked" : "") /> Nữ</label>
                </p>


                
                @* <input type="radio" name="Status" checked="@(Model?.Status)" value="1" /> <span>New</span>
                <input type="radio" name="Status" checked="@(!Model?.Status)" value="0" /> <span>Old</span> *@

                <p class="ui field">
                    <label>Status:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="checkbox" name="Status" value="1" checked="@(Model?.Status)" />
                </p>

                <p class="ui field">
                    <label>Import Date:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="date" name="ImportDate" value="@Model?.ImportDateSQL" />
                </p>

               

                <p class="ui field">
                    <label>Publisher:<label style="color: red; font-size: 150% ;">*</label></label>
                    @* <input type="text" value="1" name="PublisherId"/> *@
                    <select name="PublisherId">
                       
                        @foreach (var pub in (ViewBag.publisherList as ICollection<Publisher>)!)
                        {
                            
                            <option value="@pub.Id" selected=@(pub.Id == Model?.PublisherId)>@pub.Name</option>
                        }
                    </select>
                    
                </p>

                <br class="clear_float">

             <div style="overflow: auto;">
                    <button class="ui button primary" type="submit" style="float: right"><i class="icon save"></i>Lưu</button>
                    <a href="/admin/Patient/index" class="ui button primary" style="float: right"><i
                            class="icon list"></i>Danh Sách</a>
                </div>
        </form>

        <!-- <div class="ui segment">
            Segment Footer
        </div> -->
    </div>
</div>